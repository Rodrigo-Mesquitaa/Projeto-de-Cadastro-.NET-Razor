<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InscricaoApp</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">InscricaoApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Participantes">Participantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Pacotes">Pacotes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Atividades">Atividades</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - InscricaoApp - <a href="/Privacy">Política de Privacidade</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
